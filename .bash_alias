function ggstat() {
  FIRST_WD=$PWD
  for CUR_WD in `/bin/ls -1 ..` ; do
    if [[ -d ../$CUR_WD ]] ; then
      cd ../$CUR_WD;
      if [ `gstat 2> /dev/null | wc -l` -gt 0 ] ; then
        echo ---------------$CUR_WD------------------;
        gstat ; echo ; echo ;
      fi
      cd $FIRST_WD;
    fi
  done
}

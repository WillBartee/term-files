#!/bin/bash

if [ $0 = "/usr/bin/bash" ]; then
   export TERM_DIR="/c"
else
  if [ $0 = "bash" ]; then
     export TERM_DIR="/mnt/c"
  else
    if [ $0 = "/bin/bash" ]; then
       export TERM_DIR="/mnt/c"
    else
       export TERM_DIR="/cygdrive/c"
    fi
  fi
fi

function aws-prof {
  username=$1
  filename=$2
  if [ ${username} == "list" ]; then
    jq '.[] | .AccessKey.UserName' ${TERM_DIR}/cygwin64/home/Will/.aws/$2
  else
    jq '.[] | select(.AccessKey.UserName=="'$1'") | .AccessKey' ${TERM_DIR}/cygwin64/home/Will/.aws/$2
  fi
}

function stash {
  scmd=$1
  i=$2
  if [ -z "${scmd}" ]; then
    git stash
  elif [ ${scmd} == "show" ]; then
    echo "git stash show -p stash@{${i}}"
    git stash show -p stash@{${i}}
  else
    echo "git stash "${scmd}
    git stash ${scmd}
  fi
}

alias sqlstart='mysqld_safe &'

function sqldown {
  root_pswd=$1
  if [ -z "${root_pswd}" ] ; then
    echo Attempting to get pass from secrets.yaml
    root_pswd=`cat secrets.yaml | grep 'root' | awk '{print $2}' | tr -d '\r'`
    echo root_pwd = "${root_pswd}"
  fi
  mysqladmin -uroot --password="${root_pswd}" shutdown
}


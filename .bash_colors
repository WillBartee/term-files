
# Setup color variables

BLACK="\e[0;30m"
DGRAY="\e[90m"
GRAY="\e[30;1m"
LGRAY="\e[0;37m"
GRAYHL="\e[100m"
RED="\e[0;31m"
LRED="\e[1;31m"
GREEN="\e[0;32m"
LGREEN="\e[1;32m"
BROWN="\e[0;33m"
YELLOW="\e[1;33m"
LYELL="\e[93m"
BLUE="\e[0;34m"
LBLUE="\e[1;34m"
BLUEHL="\e[44m"
PURPLE="\e[0;35m"
LPURPLE="\e[1;35m"
CYAN="\e[0;36m"
LCYAN="\e[1;36m"
WHITE="\e[1;37m"
NEUTRAL="\e[0m"
NONE="\e[0m"
DIM="\e[2m"

export BLACK DGRAY GRAY RED LRED GREEN LGREEN BROWN YELLOW BLUE BLUEHL
export LBLUE PURPLE LPURPLE CYAN LCYAN LGRAY WHITE NEUTRAL NONE DIM

function printcolors() {
	for clbg in {40..47} {100..107} 49 ; do
		#Foreground
		for clfg in {30..37} {90..97} 39 ; do
			#Formatting
			for attr in 0 1 2 4 5 7 ; do
				#Print the result
				echo -en "\e[${attr};${clbg};${clfg}m ^[${attr};${clbg};${clfg}m \e[0m"
			done
			echo #Newline
		done
	done
}
